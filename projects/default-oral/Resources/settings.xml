<?xml version="1.0"?>
<ttsettings>
	
	<!-- Definition of the languages to be used in the interface -->
	<languages prefixed="1" default="en">
		<options>
		<item key="en" locale="en_UK.UTF-8" menu="EN" name="English"/>	
		<item key="es" locale="es_ES.UTF-8" menu="ES" name="Spanish"/>
		</options>
	</languages>
	
	<!-- Definition of the items to be displayed in the navigation menu -->
	<menu>	
		<itemlist>
			<item key="home" display="Home"/>
			<item key="cqp" display="Search"/>
		</itemlist>
	</menu>

	<defaults>
	    <title display="Oral Corpus">Oral Corpus</title>
	    <base foldername="default-oral"/>
	</defaults>
		
	<!-- Definition of the CQP corpus created from the XML files -->
	<cqp corpus="TT-DEFORAL" searchfolder="xmlfiles">	
		<pattributes>
			<item key="nform" display="Normalized form"/>
			<item key="pos" display="POS Tag"/>
			<item key="lemma" display="Lemma"/>
			<item key="ipa" display="IPA"/>
		</pattributes>
		<sattributes>
			<item level="text" key="text" display="Document Search">
			</item>
	    	<item level="u" key="u" display="Utterance">
		    	<item key="who" display="Speaker ID" type="" xpath="@who"/>
    			<item key="start" display="Start" nosearch="1" xpath="@start"/>
	    		<item key="end" display="End" nosearch="1" xpath="@end"/>
		    </item>
		</sattributes>
	    <defaults searchtype="context" subtype="u"/>
	</cqp>

	<!-- Definition of the items to be used in the XML files -->	
	<xmlfile defaultform="form" defaultview="interpret" xpath="//text" paged="0">
		<pattributes>
			<forms>
				<item key="pform" display="Transcription"/>
				<item key="form" display="Written form" color="#990000"/>
				<item key="nform" display="Normalized form" inherit="form" color="#990099"/> 
			</forms>
			
			<tags>			
				<item key="pos" display="POS tag"/>
				<item key="lemma" display="Lemma"/>
				<item key="ipa" display="IPA"/>
			</tags>
		</pattributes>
		<sattributes>
			<item key="gloss" display="Translation gloss (English)"/>
		</sattributes>
	</xmlfile>

	<!-- file uploads -->
	<files>
	    <item key="xml" display="TEI XML Files" folder="xmlfiles" extension="*.xml" description="XML Files in TEI format"/>
	    <item key="audio" display="Audio Recordings" folder="Audio" extension="*.wav,*.mp3" description="Sound files of the transcriptions"/>
	</files>

	<teiheader>
		<item xpath="/TEI/teiHeader/fileDesc/sourceDesc/recordingStmt/recording/media/@url" display="Audio file"/>
		<item xpath="/TEI/teiHeader/fileDesc/sourceDesc/recordingStmt/recording/date" display="Recording date"/>
		<item xpath="/TEI/teiHeader/profileDesc/particDesc/listPerson/person/age" display="Age (years)" cqp="age"/>
		<item xpath="/TEI/teiHeader/profileDesc/particDesc/listPerson/person/sex/@type" display="Sex (M/F)" cqp="sex"/>
		<item xpath="/TEI/teiHeader/profileDesc/particDesc/listPerson/person/birth/placeName" display="Birth place"/>
		<item xpath="/TEI/teiHeader/profileDesc/particDesc/listPerson/person/birth/placeName/@geo" display=" - geolocation coordinates"/>
		<item xpath="/TEI/teiHeader/profileDesc/particDesc/listPerson/person/nationality" display="Nationality" cqp="nationality"/>
		<item xpath="/TEI/teiHeader/profileDesc/particDesc/listPerson/person/nationality/@key" display=" - ISO 3166"/>
	</teiheader>
	
</ttsettings>
