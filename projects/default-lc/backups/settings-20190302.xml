<?xml version="1.0"?>
<ttsettings>
	
	<!-- Definition of the languages to be used in the interface -->
	<languages prefixed="1" default="en">
		<options>
		<item key="en" locale="en_UK.UTF-8" menu="EN" name="English"/>	
		<item key="es" locale="es_ES.UTF-8" menu="ES" name="Spanish"/>
		</options>
	</languages>
	
	<!-- Definition of the items to be displayed in the navigation menu -->
	<menu>	
		<itemlist>
			<item key="home" display="Home"/>
			<item key="cqp" display="Search"/>
		</itemlist>
	</menu>

	<defaults>
	    <title display="Learner Corpus">Oral Corpus</title>
	    <base javascript="/teitok/Scripts/" foldername="default-lc"/>
	</defaults>
		
	<!-- Definition of the CQP corpus created from the XML files -->
	<cqp corpus="TT-DEFORAL" searchfolder="xmlfiles">	
		<pattributes>
			<item key="nform" display="Normalized form"/>
			<item key="pos" display="POS Tag"/>
			<item key="lemma" display="Lemma"/>
			<item key="ipa" display="IPA"/>
		</pattributes>
		<sattributes>
		    <item key="text" level="text" display="Document Seach">
    			<item key="year" display="Year" type="range"/>
	    		<item key="author" display="Author" long="Author name" type="long"/>
	    	</item>
	    	<item level="u" key="u" display="Utterance">
		    	<item key="who" display="Speaker ID" type="" xpath="@who"/>
    			<item key="start" display="Start" nosearch="1" xpath="@start"/>
	    		<item key="end" display="End" nosearch="1" xpath="@end"/>
		    </item>
		</sattributes>
	    <defaults searchtype="context" subtype="u"/>
	</cqp>

	<!-- Definition of the items to be used in the XML files -->	
	<xmlfile defaultform="form" defaultview="interpret" xpath="//text" paged="0">
		<pattributes>
			<forms>
				<item key="pform" display="Transcription"/>
				<item key="form" display="Written form" color="#990000"/>
				<item key="nform" display="Normalized form" inherit="form" color="#990099"/> 
			</forms>
			
			<tags>			
				<item key="pos" display="POS tag"/>
				<item key="lemma" display="Lemma"/>
				<item key="ipa" display="IPA"/>
			</tags>
		</pattributes>
		<sattributes>
			<item key="gloss" display="Translation gloss (English)"/>
		</sattributes>
	</xmlfile>

	<!-- file uploads -->
	<files>
	    <item key="xml" display="TEI XML Files" folder="xmlfiles" extension="*.xml" description="XML Files in TEI format"/>
	    <item key="audio" display="Audio Recordings" folder="Audio" extension="*.wav,*.mp3" description="Sound files of the transcriptions"/>
	</files>
	
	<teiheader>
		<item xpath="/TEI/teiHeader/fileDesc/titleStmt/title" display="Text title"/>
		<item xpath="/TEI/teiHeader/fileDesc/titleStmt/respStmt/resp[@n='transcription']" display="Transcription"/>
		<item xpath="/TEI/teiHeader/encodingDesc/projectDesc/title" display="Project title"/>
		<item xpath="/TEI/teiHeader/profileDesc/langUsage/language/@ident" display="Text language"/>
		<item xpath="/TEI/teiHeader/profileDesc/particDesc/listPerson/person/@id" display="Person ID"/>
		<item xpath="/TEI/teiHeader/profileDesc/particDesc/listPerson/person/birth/@when" display="Year of Birth"/>
		<item xpath="/TEI/teiHeader/profileDesc/particDesc/listPerson/person/sex/@type" display="Sex"/>
		<item xpath="/TEI/teiHeader/profileDesc/particDesc/listPerson/person/langKnowledge/langKnown[@level='first']" display="First language" cqp="l1"/>
		<item xpath="/TEI/teiHeader/profileDesc/particDesc/listPerson/person/langKnowledge/langKnown[@level='native']" display="Other native languages"/>
		<item xpath="/TEI/teiHeader/profileDesc/particDesc/listPerson/person/langKnowledge/langKnown[@level='foreign']" display="Non-native languages"/>
		<item xpath="/TEI/teiHeader/profileDesc/particDesc/listPerson/person/langLearning/proficiency" display="Level of L2 proficiency" cqp="proficiency"/>
		<item xpath="/TEI/teiHeader/profileDesc/particDesc/listPerson/person/langLearning/time/@months" display="Duration of language learning"/>
		<item xpath="/TEI/teiHeader/profileDesc/particDesc/listPerson/person/langLearning/previous" display="Previous L2 course"/>
		<item xpath="/TEI/teiHeader/profileDesc/particDesc/listPerson/person/langLearning/stay/time/@months" display="Stay in L2 country"/>
		<item xpath="/TEI/teiHeader/profileDesc/textDesc/channel/@mode" display="Mode"/>
		<item xpath="/TEI/teiHeader/profileDesc/taskDesc/task/@id" display="Task ID"/>
		<item xpath="/TEI/teiHeader/profileDesc/taskDesc/task/title" display="Task Title"/>
		<item xpath="/TEI/teiHeader/profileDesc/taskDesc/task/affiliation" display="Institution"/>
		<item xpath="/TEI/teiHeader/profileDesc/taskDesc/task/genre" display="Genre of the task" cqp="genre"/>
		<item xpath="/TEI/teiHeader/profileDesc/taskDesc/task/setting" display="Setting of the task"/>
		<item xpath="/TEI/teiHeader/profileDesc/taskDesc/task/type" display="Type of task"/>
		<item xpath="/TEI/teiHeader/profileDesc/taskDesc/task/description" display="Description of the task"/>
		<item xpath="/TEI/teiHeader/profileDesc/taskDesc/task/date" display="Date"/>
	</teiheader>
	
</ttsettings>
