<?xml version="1.0"?>
<ttsettings>
	
	<!-- Definition of the languages to be used in the interface -->
	<languages prefixed="1" default="en">
		<options>
		<item key="en" locale="en_UK.UTF-8" menu="EN" name="English"/>	
		</options>
	</languages>
	
	<!-- Definition of the items to be displayed in the navigation menu -->
	<menu>	
		<itemlist>
			<item key="home" display="Home"/>
			<item key="cqp" display="Search"/>
		</itemlist>
	</menu>

	<defaults>
	    <title display="Default Corpus"/>
	    <base foldername="TOCHANGE"/>
	</defaults>
		
	<!-- Definition of the CQP corpus created from the XML files -->
	<cqp corpus="TT-DEFAULT" searchfolder="xmlfiles">	
		<pattributes>
			<item key="nform" display="Normalized form"/>
			<item key="pos" display="POS Tag"/>
			<item key="lemma" display="Lemma"/>
		</pattributes>
		<sattributes>
		    <item key="text" level="text" display="Document Seach">
    			<item key="year" display="Year" type="range"/>
	    		<item key="author" display="Author" long="Author name" type="long"/>
	    	</item>
		</sattributes>
	</cqp>

	<!-- Definition of the items to be used in the XML files -->	
	<xmlfile defaultform="form" defaultview="interpret" xpath="//text" paged="0">
		<pattributes>
			<forms>
				<item key="form" display="Written form" color="#990000" admin="1" noshow="1"/>
				<item key="nform" display="Normalized form" inherit="form" color="#990099"/> 
			</forms>
			<tags>			
				<item key="pos" display="POS tag"/>
				<item key="lemma" display="Lemma"/>
			</tags>
		</pattributes>
	</xmlfile>

	<!-- file uploads -->
	<files>
	    <item key="xml" display="TEI XML Files" folder="xmlfiles" extension="*.xml" description="XML Files in TEI format"/>
	</files>

	<teiheader>
		<item xpath="/TEI/teiHeader/fileDesc/titleStmt/title" display="Title" cqp="title"/>
		<item xpath="/TEI/teiHeader/fileDesc/titleStmt/author" display="Author" cqp="author"/>
		<item xpath="/TEI/teiHeader/profileDesc/settingDesc/setting/date/@when" cqp="year"/>
		<item xpath="/TEI/teiHeader/profileDesc/textClass" display="Text type"/>
	</teiheader>
	
</ttsettings>
